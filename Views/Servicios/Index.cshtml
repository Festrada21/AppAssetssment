@model IEnumerable<App.Models.Servicio>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoServicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Velocidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoServicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Velocidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServicioId" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ServicioId" class="btn btn-info">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.ServicioId" class="btn btn-danger">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
